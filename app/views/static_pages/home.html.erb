<div class="row">
  <div class="col-12 text-center">
    <% if @product_code == "10373589" %>
      <h2 class="display-5"><%= link_to "IKEAのサメちゃん", ikea_product_url(@product_code), target: "_blank" %>の在庫情報</h2>
    <% else %>
      <h2 class="display-5"><%= link_to @product_code, ikea_product_url(@product_code), target: "_blank" %>の在庫情報</h2>
    <% end %>
    
    <table class="table">
      <thead></thead>
        <tr>
          <th scope="col">店名</th>
          <th scope="col">在庫数</th>
          <th scope="col">次回入荷予定日</th>
        </tr>
      </thead>
      <tbody>
        <% @stock_data.each do |data| %>
          <tr>
            <th scope="row"><%= data[:store_name] %>店</th>
            <td><%= data[:stock_quantity] %></td>
            <td><%= data[:restore_date] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <p class="small">※在庫、次回入荷日はあくまで目安です。</p>
  </div>
</div>
